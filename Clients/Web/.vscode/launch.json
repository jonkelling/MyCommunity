{
    "version": "0.1.0",
    "configurations": [{
            "name": "Launch localhost",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": true,
            "url": "http://localhost:3000/",
            "webRoot": "${workspaceRoot}/dist",
            "sourceMapPathOverrides": {
                "webpack:///*": "${workspaceRoot}/src/*"
            }
        },
        {
            "name": "Launch index.html (disable sourcemaps)",
            "type": "chrome",
            "request": "launch",
            "sourceMaps": false,
            "file": "${workspaceRoot}/index.html"
        }
    ]
}