{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es6",
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "allowJs": true,
        "module": "es6",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "experimentalDecorators": true,
        "stripInternal": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true
    },
    "filesGlob": [
        "typings/index.d.ts",
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "__tests__",
        "index.android.js",
        "index.ios.js",
        "node_modules",
        "build",
        "android",
        "ios",
        "typings",
        "run-react-native-ios.js"
    ]
}