{
    "compileOnSave": true,
    "compilerOptions": {
        "target": "es2015",
        "module": "es2015",
        "forceConsistentCasingInFileNames": true,
        "pretty": true,
        "allowJs": true,
        "moduleResolution": "classic",
        "jsx": "react",
        "outDir": "build",
        "rootDir": "src",
        "experimentalDecorators": true,
        "stripInternal": true,
        "inlineSourceMap": true,
        "noImplicitAny": false,
        "allowSyntheticDefaultImports": true,
        "sourceRoot": "src",
        "typeRoots": [
            "node_modules/redux-api-middleware",
            "node_modules/redux-normalizr3-middleware",
            "node_modules/normalizr",
            "node_modules/redux",
            "node_modules/@types",
            "typings/globals"
        ]
    },
    "typeAcquisition": {
        "enable": true
    },
    "include": [
        "src/**/*.ts",
        "src/**/*.tsx"
    ],
    "exclude": [
        "__tests__",
        "index.android.js",
        "index.ios.js",
        "build",
        "android",
        "ios",
        "run-react-native-ios.js"
    ]
}